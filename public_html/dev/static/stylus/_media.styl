        &.active
            position static
            
        .container
            flex-wrap wrap

    .header-logo
        order 1

    .header-contact
        order 2

    .header__social-list 
        order 3
        position static

        li
            display block
            margin 5px 0

    .main-nav__list
        position absolute
        top 100px
        left 0
        width 100%
        text-align center
        
    .top-banner
