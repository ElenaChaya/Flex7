@media screen and (max-width 1150px)
    
    .main-nav__list
        font-size 20px

        li
            margin-right 10px
            
    .header-logo
        
        img
            width 50px

    .header-phone
        font-size 20px

    .header-call
        font-size 18px

    .header__social-list
        bottom -10px

    header
        &.active
            .header-contact
                flex-direction column

            .header-phone
                margin-right 0
                margin-bottom 10px
                font-size 20px

            .header-call
                font-size 18px
            
    .top-banner__title
        font-size 40px

    .top-banner__text
        font-size 25px

@media screen and (max-width 950px)

    .header-contact
        flex-direction column

    .header-phone
        margin-right 0
        margin-bottom 10px

    .header__social-list
        bottom -20px
        right 30px

     header
        &.active

            .author__block--header
                display none

            .header-logo
        
                img
                    width 50px

    .top-banner
        height 540px
        padding-top 136px
        

    .top-banner__content
        padding-top 40px

@media screen and (max-width 700px)
    
    header
        background-color darkBgColor

        &.active
            position static
            
        .container
            flex-wrap wrap

    .header-logo
        order 1

    .header-contact
        order 2

    .header__social-list 
        order 3
        position static

        li
            display block
            margin 5px 0

    .main-nav__list
        position absolute
        top 100px
        left 0
        width 100%
        text-align center
        
    .top-banner
        padding-top 150px
        height 485px

    .top-banner__text
        display none
        
    .top-banner__title
        font-size 25px
        
@media screen and (max-width 500px)  
    
    .main-nav__list
        font-size 16px
        
        li
            margin-right 5px

    .top-banner
        height 439px

    .top-banner__title
        font-size 20px


@media screen and (max-width 400px)  
    
    .main-nav__list
        font-size 14px

    .top-banner
        height 350px

    .top-banner__content
        padding-top 0

    .top-banner__title
        font-size 18px

        
    
