.portfolio
    padding 100px 0
    background linear-gradient(to bottom, #253969, #1e275c)

.portfolio-content
   .g-section-title
        max-width 750px
        margin 0 auto 50px

.portfolio-video-slider

    width 100%
    max-width 750px
    margin 0 auto 50px

        

    .slick-dots
        position static
        
        li 
            border 1px solid lightYellowColor
            border-radius 50%

            &.slick-active
                background-color lightYellowColor
            
        button
            opacity 0

.portfolio-photo
    &:before
        content ''
        display block
        width 100%
        max-width 950px
        height 1px
        margin 0 auto 60px
        background-color #fff

.portfolio-photo-slider 
    position relative
    width 100%
    max-width 1100px
    padding 0 70px
    margin 0 auto


.portfolio-photo_link
    position relative
    display block

    &:after
        content ''
        display block
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        z-index 1
        sprite($s-magnifier)
        opacity 0
        transition all linear .3s
    
    &:hover
        &:after
            opacity 1

.portfolio-photo__img
    width 160px
    height 160px
    margin 0 auto 30px
    background-size cover 

.portfolio-photo__controlls
    position absolute
    top 50%
    transform translateY(-50%)
    display block
    cursor pointer

.portfolio-photo__prev
    left 0
    sprite($s-arrow-left)

.portfolio-photo__next
    right 0
    sprite($s-arrow-right)


        
