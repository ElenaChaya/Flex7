.scenario
    padding 80px 0
    background linear-gradient(to bottom, #232e6f, #3d518d)
    
    .g-line-number
        position absolute
        top -35px
        left 50%
        transform translateX(-50%)

.scenario-content
    width 100%
    max-width 900px
    margin 0 auto

.scenario-list
    width 100%
    max-width 660px
    margin 0 auto
    padding 130px 70px 87px
    background url('../img/general/scenario-list-bg.jpg') 0 0 no-repeat
    background-size cover
    border-radius 10px

    li
        margin-bottom 20px
        
        &:last-child
            margin-botttom 0
