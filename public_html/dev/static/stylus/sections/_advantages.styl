.advantages
    padding 80px 0 120px
    background linear-gradient(to bottom, #232e6f, #3d518d)

.advantages-content
    width 100%
    max-width 850px
    margin 0 auto
    
    .review
        padding-left 60px

.advantages-icon
    display flex
    justify-content space-around
    align-items center
    margin-bottom 40px
    
    span
        font-size 110px
        color #fff
        font-family mediumFont

.advantages-text 
    margin-bottom 30px
    text-align center
    font-size 30px
    font-family mediumFont
    color #fff

.advantages-list 
    padding-bottom 50px
    margin-bottom 15px
    border-bottom 1px solid #fff
    color #fff

    li
        position relative
        width 100%
        max-width 600px
        margin 0 auto 30px
        display list-item
        
        &:before
            content '-'
            position absolute
            margin-left -15px

        &:last
            margin-bottom 0px

    b 
        color lightYellowColor
    
