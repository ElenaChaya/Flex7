.reviews
    padding 100px 0 20px
    background linear-gradient(to bottom, #402d61, #14133c)

.reviews-content

   .g-section-title
        position relative
        max-width 680px
        margin 0 auto 50px

        &:after
            bottom -60px
            right 0px

.reviews-slider
    max-width 1050px
    padding 0 55px
   

    &:after 
        max-width: 950px;
        margin 30px auto 70px


.review-slider__item
    width 100%
    max-width 945px
    margin 0 auto
    

.review-wrap
    display flex
    margin-bottom 30px

    &:last-of-type
        margin-bottom 0

    .review
        width 100%
        max-width 555px

    &.review-wrap--right
        flex-direction row-reverse
        text-align right
        
        .review-photo
            margin-right 0
            margin-left 30px

    .review-title
        margin-bottom 20px

.review-photo
    width 160px
    height 160px
    margin-right 30px
    border-radius 50%
    background-size cover

.review-wrap 
    .review-text 
        text-align justify

.review-text
    font-size 17px

.reviews-video

    .g-section-title
        margin-bottom 10px

.reviews_video-slider
    border-bottom none

.reviews-slider-mobile__prev 
    left 0
    width 50px
    height 50px
    

.reviews-slider-mobile__controls 
    position absolute
    z-index 5
    top 80px
    margin-top -25px
    cursor pointer

.slider
    .reviews-slider-mobile__prev 
        top: 80px;
        margin-top: -25px
        left 0

    .reviews-slider-mobile__next
        top: 80px;
        margin-top: -25px;
        right 0
    
 
