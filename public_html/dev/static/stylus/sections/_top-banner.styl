.top-banner
    background url('../img/general/bg-blue.jpg') 0 0 no-repeat
    background-size cover
    padding-top 120px
    height 800px

    .container 
        height 100%

.top-banner__content
    width 100%
    max-width 1000px
    margin 0 auto
    height 100%
    padding-right 51%
    padding-top 90px
    color #fff

.top-banner__title
    margin-bottom 40px
    font-size 50px
    font-weight normal
    font-family madiumFont
    

.top-banner__title--yellow
    color lightYellowColor

.top-banner__text
    width 80%
