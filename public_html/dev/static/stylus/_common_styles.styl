.g-social__list

    li 
        display inline-block
        margin 0 10px

.g-social__link
    display block
    width 22px
    height 22px
	

    &.g-social__link--mail
        background url(../img/svg/mail.svg) 0 0 no-repeat
        background-size 100%

    &.g-social__link--fb
        background url(../img/svg/facebook.svg) 0 0 no-repeat
        background-size 100%	

.g-section-title
    font-family mediumFont
    font-size 40px
    font-weight normal
    color lightYellowColor
    text-align center
    
.g-section-title--small
        margin-bottom 20px
        font-size 33px

.g-btn
    position relative
    display inline-block
    height 50px
    line-height 50px
    padding 0 30px 0 80px
    margin-bottom 30px
    font-family mediumFont
    font-size 28px
    color blackPurpleColor
    background linear-gradient(to bottom, #eecd7d, #ff8159)
    border-radius 30px
    box-shadow 0 0 40px 5px rgba(238, 205, 125, .4)

    &:before
        content ''
        position absolute
        left 30px
        top 50%
        transform translateY(-50%)
        display block

    &.g-btn--date
        &:before
            sprite($s-date)

        &:after
            content ''
            position absolute
            top -20px
            right -120px
            display block
            sprite($s-arrow)
            
            
    