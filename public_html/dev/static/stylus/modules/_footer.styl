footer
    padding 40px 0 30px
    background-color darkBgColor

.footer-content
    display flex
    margin-bottom 60px
    justify-content space-between

.footer-logo
    display flex
    align-items flex-start

    img
        margin-right 10px

 
.footer-contacts
    text-align center

.footer-phone
    display block
    margin-bottom 20px
    font-size 40px
    font-family mediumFont
    color #fff

.footer-portals
    display flex
    font-size 18px
    color #fff

.footer-portals__text
    margin-right 10px

.footer-portals__links

    li
        margin-bottom 20px

    img
        width 30px
        height 30px
    
.footer-copyright
    color #fff
    text-align center
    font-size 20px

    span
        margin-right 20px
        
    a
        color grayColor
        text-decoration underline
        

